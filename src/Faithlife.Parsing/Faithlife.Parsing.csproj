<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>1.2.0</VersionPrefix>
    <TargetFrameworks>netstandard1.4;netstandard2.0;net461</TargetFrameworks>
    <FrameworkPathOverride Condition="'$(TargetFramework)' == 'net461' and '$(MONO_ROOT)' != ''">$(MONO_ROOT)/lib/mono/4.6.1-api/</FrameworkPathOverride>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <DebugType>portable</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Faithlife/Parsing/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://faithlife.github.io/Parsing/</PackageProjectUrl>
    <PackageReleaseNotes>https://github.com/Faithlife/Parsing/blob/master/VersionHistory.md#released</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/Faithlife/Parsing.git</RepositoryUrl>
    <Authors>Faithlife Corporation</Authors>
    <Copyright>Copyright 2016-2018 Faithlife Corporation</Copyright>
    <Description>A simple library for constructing parsers in C#.</Description>
    <PackageTags>parser parsers</PackageTags>
    <SourceLinkUrl>https://raw.githubusercontent.com/Faithlife/Parsing/{commit}/*</SourceLinkUrl>
    <SourceLinkOriginUrl>https://github.com/Faithlife/Parsing.git</SourceLinkOriginUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SourceLink.Create.GitHub" Version="2.7.3" PrivateAssets="all" />
    <PackageReference Include="SourceLink.Test" Version="2.7.3" PrivateAssets="all" />
    <DotNetCliToolReference Include="dotnet-sourcelink" Version="2.7.3" />
    <DotNetCliToolReference Include="dotnet-sourcelink-git" Version="2.7.3" />
  </ItemGroup>

</Project>